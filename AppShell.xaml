<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:PlushToyStore"
       x:Class="PlushToyStore.AppShell"
       Title="PlushToyStore"
       Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <!-- Tab 1: Home -->
        <Tab Title="Home">
            <ShellContent Title="Home"
                          ContentTemplate="{DataTemplate local:MainPage}"
                          Route="MainPage" />
        </Tab>

        <!-- Tab 2: Compra -->
        <Tab Title="Compra">
            <ShellContent Title="Compra"
                          ContentTemplate="{DataTemplate local:Views.CompraView}"
                          Route="CompraView" />
        </Tab>

        <!-- Tab 3: Peluche -->
        <Tab Title="Peluche">
            <ShellContent Title="Peluche"
                          ContentTemplate="{DataTemplate local:Views.PelucheView}"
                          Route="PelucheView" />
        </Tab>

        <!-- Tab 4: User -->
        <Tab Title="User">
            <ShellContent Title="User"
                          ContentTemplate="{DataTemplate local:Views.UserView}"
                          Route="UserView" />
        </Tab>
    </TabBar>

</Shell>
